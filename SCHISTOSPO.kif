--
(object Parasite)
(object Mollusque)
(object Hote)
(object PointEau)

;; ORDONNANCEMENT DES ACTIVITÉS

;; Une occurrence de PropagationBilharziose est possible après une occurrence de Pluie, Agriculture, Changement Climat, Pêche, Irrigation

;; L'Infection implique une pénétration de l'homme par le parasite	
	

	
;; PRÉCONDITIONS DE L'OCCURRENCE DES ACTIVITÉS

;; Une occurrence d'Infection est précédée d'une occurrence d'Exposition

;; Une occurrence d'Immunisation est précédée d'une occurrence d'Infection

;; Une occurrence d'Infection est possible que si le Parasite est à l'état Furcocercaire et le Hote à l'état Expose

;; Une occurrence de ReproductionParasite n'est possible que si l'Hote est Infecte et que les parasite sont au stade Adulte

;; Une occurrence de multiplication est précédée d'une occurrence de Penetration Mollusque

;; Une occurrence de DeveloppementCercaire est précédée d'une occurrence de PenetrationHomme

;; EFFETS DE L'OCCURRENCE DES ACTIVITÉS

;; Une occurrence d'Eclosion produit un état Miracidium

;; Une occurrence d'Eclosion produit un état Miracidium


;; La contamination est suivie de l'infection. L'infection ici correspond aussi au processus de la réaction pathologique.
(forall (?occContam)
	(implies (and (occurrence-of ?occContam Contamination)
				  (legal ?occContam))
	(legal (successor Infection ?occContam))))

;; La contamination implique une pénétration de l'homme par le parasite	
	
;; la succession entre les autres phases n'est pas systématique et dépend d'une certaine probabilité même si toutes les préconditions sont réunies
;; En fait, l'idée pourrait être de mettre un peu de probabilité dans les préconditions 

;; Cylce de vie du schistosome, parasite de la schistosomiase
	
(forall (?occContam)
	(implies (and (occurrence-of ?occContam Contamination)
				  (legal ?occContam))
	(legal (successor DeveloppementCercaire ?occContam))))
	
(forall (?occDevCercaire)
	(implies (and (occurrence-of ?occDevCercaire DeveloppementCercaire)
				  (legal ?occDevCercaire))
	(legal (successor DeveloppementSchistosomule ?occDevCercaire))))
	
(forall (?occDevSchisto)
	(implies (and (occurrence-of ?occDevSchisto DeveloppementSchistosomule)
				  (legal ?occDevSchisto))
	(legal (successor Reproduction ?occDevSchisto))))

(forall (?occReprod)
	(implies (and (occurrence-of ?occReprod Reproduction)
				  (legal ?occReprod))
	(legal (successor LiberationOeuf ?occReprod))))
	
(forall (?occLibOeuf)
	(implies (and (occurrence-of ?occLibOeuf LiberationOeuf)
				  (legal ?occLibOeuf))
	(legal (successor Eclosion ?occLibOeuf))))
	
(forall (?occEclosion)
	(implies (and (occurrence-of ?occEclosion Eclosion)
				  (legal ?occEclosion))
	(legal (successor PenetrationMollusque ?occEclosion))))
	
(forall (?occPenetMol)
	(implies (and (occurrence-of ?occPenetMol PenetrationMollusque)
				  (legal ?occPenetMol))
	(legal (successor Multiplication ?occPenetMol))))
	
(forall (?occMulti)
	(implies (and (occurrence-of ?occMulti Multiplication)
				  (legal ?occMulti)))
	(legal (successor LiberationSporocyste ?occMulti)))

(forall (?occLibSporo)
	(implies (and (occurrence-of ?occLibSporo LiberationSporocyste)
				  (legal ?occLibSporo))
	(legal (successor DeveloppementSporocyste ?occLibSporo))))

(forall (?occDevelop)
	(implies (and (occurrence-of ?occDevelop DeveloppementSporocyste)
				  (legal ?occDevelop))
	(legal (successor RechercheHomme ?occDevelop))))
	
(forall (?occRechercheH)
	(implies (and (occurrence-of ?occRechercheH RechercheHomme)
				  (legal ?occRechercheH))
	(legal (successor Contamination ?occRechercheH))))
	

